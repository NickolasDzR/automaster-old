

mixin navigation()
    - const nav = true;
    include ../contacts/contacts.pug
    include ../../components/hamburger/hamburger.pug
    +hamburger
    nav.nav(role="navigation")
        .nav__wrapper
            .nav__inner
                .nav__menu
                    ul.nav__list
                        li.nav__list-item
                            a.nav__list-link(href="")  Решения
                        li.nav__list-item
                            a.nav__list-link(href="")  Портфолио
                        li.nav__list-item.nav__menu_active
                            a.nav__list-link(href="")  О нас
                .nav__contacts
                    .nav__contacts-language
                        ul
                            li
                                a(href="")  O'ZB
                            li
                                a.nav__contacts-language_active(href="")  Рус
                            li
                                a(href="")  Eng
                    .nav__contacts-number
                        ul
                            li  998 71 276 64 98
                            li  Колл-центр
        .contacts
            +contacts('icon-phone', 'Номер телефона', '99 777 55 66  —  71 256 55 66', 'mb-4')
            +contacts('icon-form-mail', 'Email адрес', 'info@automaster.uz')
